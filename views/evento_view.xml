<record id="upopet_evento_form_view" model="ir.ui.view">
    <field name="name">upopet.evento.form</field>
    <field name="model">upopet.evento</field>
    <field name="arch" type="xml">
        <form string="Evento">
            <sheet layout="auto">
                <group>
                    <field name="id_evento" />
                    <field name="nombre" />
                    <field name="descripcion" />
                    <field name="id_tipo_evento" />
                </group>
                <group>
                    <field name="fecha" />
                    <field name="url" />
                </group>
                <group>
                    <field name="id_especies" widget="many2many_tags" options="{'no_create': True}" />
                    <field name="id_empresa" />
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="upopet_evento_tree_view" model="ir.ui.view">
    <field name="name">upopet.evento.tree</field>
    <field name="model">upopet.evento</field>
    <field name="arch" type="xml">
        <tree string="Eventos">
            <field name="id_evento" />
            <field name="nombre" />
            <field name="id_tipo_evento" />
            <field name="fecha" />
            <field name="url" />
            <!-- Otros campos generales -->
        </tree>
        <!--Permito al usuario filtrar los eventos por tipo-->
        <filter name="filter_curso" string="Curso" domain="[('id_tipo_evento', '=', 'curso')]" />
        <filter name="filter_recurso_educativo" string="Recurso Educativo" domain="[('id_tipo_evento', '=', 'recurso educativo')]" />
        <filter name="filter_encuentro" string="Encuentro" domain="[('id_tipo_evento', '=', 'encuentro')]"/>
    </field>
</record>



<record id="upopet_evento_list_action" model="ir.actions.act_window">
    <field name="name">Eventos</field>
    <field name="res_model">upopet.evento</field>
    <field name="view_mode">tree,form,calendar</field>
    <field name="search_view_id" ref="upopet.evento.filter" />
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">No se encontraron eventos.</p>
    </field>
</record>

<!--Calendario de eventos-->
<record id="upopet_evento_calendar_view" model="ir.ui.view">
    <field name="name">upopet.evento.calendar</field>
    <field name="model">upopet.evento</field>
    <field name="arch" type="xml">
        <calendar string="Calendario de Eventos">
            <date name="fecha" string="Fecha del Evento"/>
        </calendar>
    </field>
</record>

<!--Filtro para los eventos que ocurran despues de una fecha dada-->
<record id="upopet_evento_filter_view" model="ir.ui.view">
    <field name="name">upopet.evento.filter</field>
    <field name="model">upopet.evento</field>
    <field name="arch" type="xml">
        <search string="Filtrar Eventos">
            <field name="fecha" string="Fecha de inicio" filter_domain="[('fecha', '>=', self)]" />
        </search>
    </field>
</record>


