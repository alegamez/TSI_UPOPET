<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
    
    <record id="upopet.usuario_view_form" model="ir.ui.view">
        <field name="name">upopet.usuario.view.form</field>
        <field name="model">upopet.usuario</field>
        <field name="arch" type="xml">
            <form string="Anadir usuario">
                <sheet>
                    <group>
                        <field name="id_usuario" />
                    <field name="nombre" />
                    <field name="apellido" />
                    <field name="nombreUsuario" />
                    <field name="contraseña" />
                    <field name="correo" />                        
                    </group>

                    <group>
                        <field name="ids_matricula" widget="one2many" options="{'no_create': True}"/>                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>
        
    <record id="upopet.usuario_view_tree" model="ir.ui.view">
        <field name="name">upopet.usuario.view.tree</field>
        <field name="model">upopet.usuario</field>
        <field name="arch" type="xml">
            <tree string="Usuarios">
                <field name="id_usuario" />
                <field name="nombre" />
                <field name="apellido" />
                <field name="nombreUsuario" />
                <field name="contraseña" />
                <field name="correo" />
                <field name="ids_matricula" widget="one2many" options="{'no_create': True}"/>
            </tree>
        </field>
    </record>
    
    </data>
    

</odoo>
