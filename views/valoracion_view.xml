<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
    <record id="upopet.valoracion_view_tree" model="ir.ui.view">
        <field name="name">upopet.valoracion.view.tree</field>
        <field name="model">upopet.valoracion</field>
        <field name="arch" type="xml">
            <tree string="Valoracion">
                <field name="id_valoracion"/>
                <field name="calificacion"/> 
                <field name="comentario" />
                <field name="id_matricula" widget="one2one" options="{'no_create': True}"/>                
            </tree>
        </field>
    </record>

    <record id="upopet.valoracion_view_form" model="ir.ui.view">
        <field name="name">upopet.valoracion.view.form</field>
        <field name="model">upopet.valoracion</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="id_valoracion"/>
                        <field name="calificacion"/> 
                        <field name="comentario" />                        
                    </group>
                    <group>
                       <field name="id_matricula" widget="one2one" options="{'no_create': True}"/> 
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
        
    
    </data>
    

</odoo>
