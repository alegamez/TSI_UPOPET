<odoo>
  <record id="TSI_UPOPET_categoriaPregunta_form_view" model="ir.ui.view">
    <field name="name">TSI_UPOPET.categoriaPregunta.form</field>
    <field name="model">TSI_UPOPET.categoriaPregunta</field>
    <field name="arch" type="xml">
      <form string="Categoria Pregunta">
        <sheet layout="auto">
          <group>
            <field name="name" />
            <field name="nombre" />
            <field name="descripcion" />
            <field name="ids_pregunta">
              <tree>
                <field name="nombre" />
                <field name="descripcion" />
              </tree>
            </field>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="TSI_UPOPET_tree_view" model="ir.ui.view">
    <field name="name">TSI_UPOPET.categoriaPregunta.tree</field>
    <field name="model">TSI_UPOPET.categoriaPregunta</field>
    <field name="arch" type="xml">
      <tree string="tree_string">
        <field name="name" />
            <field name="nombre" />
            <field name="descripcion" />
            <field name="ids_pregunta">
      </tree>
    </field>
  </record>

  <record id="TSI_UPOPET_class_search_view" model="ir.ui.view">
    <field name="name">TSI_UPOPET.categoriaPregunta.search</field>
    <field name="model">TSI_UPOPET.categoriaPregunta</field>
    <field name="arch" type="xml">
      <search>
        <filter name="search_categoriaPregunta" string="CategoriaPregunta = *****" domain="[('capacity','>',10)]" />
        <separator orientation="vertical" />
        <group expand="0" string="Agrupar por...">
          <filter name="group_by_categoriaPregunta" string="CategoriaPregunta" context="{'group_by':'id_categoriaPregunta'}" />
        </group>
      </search>
    </field>
  </record>

  <record id="categoriaPregunta_list_action" model="ir.actions.act_window">
    <field name="name">categoriaPregunta</field>
    <field name="res_model">TSI_UPOPET.categoriaPregunta</field>   
    <field name="search_view_id" ref="TSI_UPOPET_class_search_view"/> 
    <field name="view_mode">tree,form</field>    
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Crea la primera categoria</p>
    </field>    
  </record>
</odoo>