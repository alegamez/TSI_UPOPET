<odoo>
  <record id="TSI_UPOPET_respuesta_form_view" model="ir.ui.view">
    <field name="name">TSI_UPOPET.respuesta.form</field>
    <field name="model">TSI_UPOPET.respuesta</field>
    <field name="arch" type="xml">
      <form string="Respuesta">
        <sheet layout="auto">
          <group>
            <field name="name" />
            <field name="contenido" />
            <field name="fechaPublicacion" />
            <field name="id_usuario" widget="many2one"/>
            <field name="id_pregunta" widget="many2one"/>
              <tree>
                <field name="id_pregunta" />
                <field name="contenido" />
              </tree>
            </field>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="TSI_UPOPET_tree_view" model="ir.ui.view">
    <field name="name">TSI_UPOPET.respuesta.tree</field>
    <field name="model">TSI_UPOPET.respuesta</field>
    <field name="arch" type="xml">
      <tree string="tree_string">
        <field name="name" />
            <field name="contenido" />
            <field name="fechaPublicacion" />
            <field name="id_usuario" widget="many2one"/>
            <field name="id_pregunta" widget="many2one"/>
      </tree>
    </field>
  </record>

  <record id="TSI_UPOPET_calendar_view" model="ir.ui.view">
    <field name="name">TSI_UPOPET.respuesta.calendar</field>
    <field name="model">TSI_UPOPET.respuesta</field>
    <field name="arch" type="xml">
      <calendar string="Respuesta" color="activityType" date_start="start" date_stop="end" mode="month">
        <field name="name" />
        <field name="contenido" />
      </calendar>
    </field>
  </record>

  <record id="respuesta_list_action" model="ir.actions.act_window">
    <field name="name">Respuesta</field>
    <field name="res_model">TSI_UPOPET.respuesta</field>   
    <field name="search_view_id" ref="TSI_UPOPET_class_search_view"/> 
    <field name="view_mode">tree,form,calendar</field>    
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Crea la primera respuesta</p>
    </field>    
  </record>
</odoo>