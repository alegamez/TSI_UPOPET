<record id="upopet_empresa_form_view" model="ir.ui.view">
    <field name="name">upopet.empresa.form</field>
    <field name="model">upopet.empresa</field>
    <field name="arch" type="xml">
        <form string="Empresa">
            <sheet>
                <group>
                    <field name="name" />
                    <field name="nombreEmpresa" />
                </group>
                <notebook>
                    <page name="eventos" string="Eventos">
                        <field name="id_evento" />
                    </page>
                    <page name="seguros" string="Seguros">
                        <field name="ids_seguro" widget="one2many" />
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>

<record id="upopet_empresa_tree_view" model="ir.ui.view">
    <field name="name">upopet.empresa.tree</field>
    <field name="model">upopet.empresa</field>
    <field name="arch" type="xml">
        <tree string="Empresas">
            <field name="name" />
            <field name="nombreEmpresa" />
        </tree>
    </field>
</record>

<record id="upopet_empresa_list_action" model="ir.actions.act_window">
    <field name="name">Empresas</field>
    <field name="res_model">upopet.empresa</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="upopet_empresa_tree_view" />
    <field name="search_view_id" ref="upopet.empresa.filter" />
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">No se encontraron empresas.</p>
    </field>
</record>

<!-- Busquedas personalizadas -->
<!-- Busquedas por los distintos nombres de las empresas -->
<search string="Buscar Empresas">
    <field name="name" string="Nombre de la Empresa" />
</search>

<!-- Busquedas por empresas segun su tipo: evento o seguro -->
<record id="upopet_empresa_filter_view" model="ir.ui.view">
    <field name="name">upopet.empresa.filter</field>
    <field name="model">upopet.empresa</field>
    <field name="arch" type="xml">
        <search string="Busqueda empresa por tipo">
            <filter name="filter_empresas_seguros" string="Empresas de Seguros" domain="[('ids_seguro', '!=', False)]" />
            <filter name="filter_empresas_eventos" string="Empresas de Eventos" domain="[('id_evento', '!=', False)]" />
        </search>
    </field>
</record>
