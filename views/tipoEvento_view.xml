<odoo>
  <record id="TSI_UPOPET_tipoEvento_form_view" model="ir.ui.view">
    <field name="name">TSI_UPOPET.tipoEvento.form</field>
    <field name="model">TSI_UPOPET.tipoEvento</field>
    <field name="arch" type="xml">
      <form string="Tipo de Evento">
        <sheet layout="auto">
          <group>
            <field name="name" />
            <field name="nombre" />
            <field name="ids_evento">
              <tree>
                <field name="name" />
                <field name="nombre" />
              </tree>
            </field>
          </group>
          <notebook>
                    <page string="Cursos">
                    </page>
                    <page string="Encuentros">
                    </page>
                    <page string="Recursos Educativos">
                    </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>


  <record id="TSI_UPOPET_tree_view" model="ir.ui.view">
    <field name="name">TSI_UPOPET.tipoEvento.tree</field>
    <field name="model">TSI_UPOPET.tipoEvento</field>
    <field name="arch" type="xml">
      <tree string="tree_string">
        <field name="name" />
            <field name="nombre" />
            <field name="ids_evento">
      </tree>
    </field>
  </record>

  <record id="TSI_UPOPET_class_search_view" model="ir.ui.view">
    <field name="name">TSI_UPOPET.tipoEvento.search</field>
    <field name="model">TSI_UPOPET.tipoEvento</field>
    <field name="arch" type="xml">
      <search>
        <separator orientation="vertical" />
        <group expand="0" string="Agrupar por...">
          <filter name="group_by_tipoEvento" string="tipoEvento" context="{'group_by':'id_tipoEvento'}" />
        </group>
      </search>
    </field>
  </record>

  <record id="tipoEvento_list_action" model="ir.actions.act_window">
    <field name="name">tipoEvento</field>
    <field name="res_model">TSI_UPOPET.tipoEvento</field>   
    <field name="search_view_id" ref="TSI_UPOPET_class_search_view"/> 
    <field name="view_mode">tree,form</field>    
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Crea el primer tipo de evento</p>
    </field>    
  </record>
</odoo>