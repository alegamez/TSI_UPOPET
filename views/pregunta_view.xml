        <field name="name" />
        <field name="contenido" />
      </calendar>
    </field>
  </record>
-->
  <record id="pregunta_pivot_view" model="ir.ui.view">
   <field name="name">TSI_UPOPET.pregunta.pivot</field>
   <field name="model">TSI_UPOPET.pregunta</field>
   <field name="arch" type="xml">
       <pivot string="Pregunta">
           <field name="contenido" type="row"/>
           <field name="ids_respuesta" type="row"/>
       </pivot>
   </field>
</record>

  <record id="pregunta_list_action" model="ir.actions.act_window">
    <field name="name">Pregunta</field>
    <field name="res_model">TSI_UPOPET.pregunta</field>   
    <field name="search_view_id" ref="TSI_UPOPET_class_search_view"/> 
    <field name="view_mode">tree,form,pivot</field>    
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Crea la primera pregunta</p>
    </field>    
  </record>
</odoo>