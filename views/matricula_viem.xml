<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
        <record id="upopet.matricula_view_tree" model="ir.ui.view">
            <field name="name">upopet.matricula.view.tree</field>
            <field name="model">upopet.matricula</field>
            <field name="arch" type="xml">
                <tree string="Matricula">
                    <field name="id_matricula" />
                    <field name="precio" />
                    <field name="fecha" />
                    <field name="id_pago" widget="one2one" options="{'no_create': True}"/>
                    <field name="id_usuario" widget="many2one" options="{'no_create': True}"/>
                    <field name="id_evento" widget="many2one" options="{'no_create': True}"/>                    
                </tree>
            </field>
        </record>

        <record id="upopet.matricula_view_form" model="ir.ui.view">
            <field name="name">upopet.matricula.view.form</field>
            <field name="model">upopet.matricula</field>
            <field name="arch" type="xml">
                <form string="Matriculas">
                    <sheet>
                        <group>
                            <field name="id_matricula" />
                            <field name="precio" />
                            <field name="fecha" />                           
                        </group>
                        <group>
                            <field name="id_pago" widget="one2one" options="{'no_create': True}"/>
                            <field name="id_usuario" widget="many2one" options="{'no_create': True}"/>
                            <field name="id_evento" widget="many2one" options="{'no_create': True}"/>                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
    
    </data>
    

</odoo>
