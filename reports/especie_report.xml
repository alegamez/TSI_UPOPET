<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_especie">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <h2>Especie: <span t-field="o.nombre"/></h2>
                    <p><strong>ID de la Especie:</strong> <span t-field="o.name"/></p>
                    <p><strong>Nombre Científico:</strong> <span t-field="o.nombreCientifico"/></p>
                    <p><strong>Tamaño (cm):</strong> <span t-field="o.tamanyo"/></p>
                    <p><strong>Peso (kg):</strong> <span t-field="o.peso"/></p>
                    <p><strong>Estado:</strong> <span t-field="o.estado"/></p>
                    <p><strong>Tipo de Animal:</strong> <span t-field="o.tipoespecie_id.nombre"/></p>
                </div>
            </t>
        </t>
    </template>

    <report id="report_especies" string="Report" model="upopet.especie" report_type="qweb-pdf" name="upopet.report_especie_template" />
</odoo>