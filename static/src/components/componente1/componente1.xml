<?xml version="1.0" encoding="UTF-8"?> 
<templates xml:space="preserve"> 
     <t t-name="owl.componente1" owl="1"> 
        <div class="componente1-container">

            <div class="row mx-2 mt-3">
                <div class="col-lg-6">
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bstarget="#exampleModal" t-on-click="addTask">New</button>
                </div>
                <div class="col-lg-6">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Buscar por nombre..." t-ref="search-input" t-on-keyup="searchTasks"/>
                        <button class="btn btn-outline-primary" t-on-click="searchTasks">Search</button>
                    </div>
                </div>
            </div>

            <div class="row m-2">
                <div class="col">
                    <table class="table table-striped table-hover border">
                      <thead>
                        <tr>
                          <th scope="col">Categoría</th>
                          <th scope="col">Descripción</th>
                          <th scope="col"> </th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr t-foreach="state.taskList" t-as="task" t-key="task.id">
                          <td>
                              <div class="form-check">
                                  <label class="form-check-label" t-att-for="task.id">
                                    <span t-esc="task.name"/>
                                  </label>
                                </div>
                          </td>
                          <td>
                              <input type="text" class="form-control" t-att-value="task.descripcion" t-on-change="(e)=>this.updateDescripcion(e,task)"/>
                          </td>
                          <td>
                              <button class="btn btn-success me-2" data-bs-toggle="modal" data-bs-target="#exampleModal" t-on-click="()=>this.editTask(task)">Edit</button>
                              <button class="btn btn-danger" t-on-click="()=>this.deleteTask(task)">Delete</button>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                </div>
            </div>


            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Añadir nueva clase</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Titulo</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="name" tmodel="state.task.name" t-att-value="state.task.name" />
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Descripcion</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="descripcion" title="Elige una descripción para la categoría" t-model="state.task.descripcion" tatt-value="state.task.descripcion" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" t-on-click="saveTask">Guardar cambios</button>
                </div>
                </div>
            </div>

        </div>
     </t> 
</templates>
